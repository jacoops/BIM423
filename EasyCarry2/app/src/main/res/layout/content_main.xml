<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1289A7"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/sliderLayout"
    android:orientation="vertical"
    android:layout_height="200dp">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:background="#ff9f1a"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/sliderLayout"
        android:id="@+id/menu"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:text="taşınacak ilanlar"
                android:background="#7158e2"
                android:drawableTop="@drawable/esya"
                android:layout_margin="5dp"
                android:textColor="#ff9f1a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="0dp"
                android:background="#7158e2"
                android:textColor="#ff9f1a"
                android:textStyle="bold"
                android:text="Taşıyıcılar"
                android:drawableTop="@drawable/tasiyici"

                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:text="İletişim Bilgileri"
                android:textColor="#ff9f1a"
                android:textStyle="bold"
                android:background="#7158e2"
                android:drawableTop="@drawable/iletisi"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="0dp"
                android:text="Duyurular"
                android:background="#7158e2"
                android:drawableTop="@drawable/duyurular"
                android:textColor="#ff9f1a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>